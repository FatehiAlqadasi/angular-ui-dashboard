mixin header
    .navbar.navbar-inverse.navbar-fixed-top(ng-show="displayToolbar",role='navigation',ng-controller="HeaderController")
        .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='#home') {{ ::text.appTitle }}
        .navbar-collapse.collapse
            ul.nav.navbar-nav
                li(ui-sref="examples",ui-sref-active="active")
                    a(href='#examples') {{ ::text.leftMenu.examples }}
                li(ui-sref="downloads",ui-sref-active="active")
                    a(href='#downloads') {{ ::text.leftMenu.download }}
                li(ui-sref="docs",ui-sref-active="active")
                    a(href='#docs') {{ ::text.leftMenu.documentation }}
                li
                    a(href='https://github.com/christophe238/angular-ui-dashboard',target="_blank") {{ ::text.leftMenu.github }}