.page-header(ng-click="page.expanded = !page.expanded")
    h2
        pie-chart(configuration="miniPieConfiguration", data="data0")
        | {{ ::text.pie.pageHeader + ' ' }}
        small {{ ::text.pie.directiveCall }}
        span.pull-right.glyphicon.glyphicon-chevron-down(ng-show="page.expanded")
        span.pull-right.glyphicon.glyphicon-chevron-right(ng-show="!page.expanded")
.page-content(ng-show="page.expanded")
    .row
        .col-md-6
            .panel.panel-default
                .panel-heading(ng-click="pies.default.expanded = !pies.default.expanded") {{ ::text.pie.pieDefault }}
                    span.pull-right.glyphicon.glyphicon-chevron-down(ng-show="pies.default.expanded")
                    span.pull-right.glyphicon.glyphicon-chevron-up(ng-show="!pies.default.expanded")
                .panel-body(ng-show="pies.default.expanded")
                    .center
                        pie-chart(configuration="config0",data="data0")
        .col-md-6
            .panel.panel-default
                .panel-heading(ng-click="pies.pie1.expanded = !pies.pie1.expanded") {{ ::text.pie.pie1 }}
                    span.pull-right.glyphicon.glyphicon-chevron-down(ng-show="pies.pie1.expanded")
                    span.pull-right.glyphicon.glyphicon-chevron-up(ng-show="!pies.pie1.expanded")
                .panel-body(ng-show="pies.pie1.expanded")
                    .center
                        pie-chart(configuration="config1",data="data1")